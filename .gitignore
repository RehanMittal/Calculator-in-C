/* 
    Calculator 
                */

#include <stdio.h>

int main(void){
    float x, y;
    printf("Enter first number: ");
    scanf("%f",&x);
    printf("Enter second number: ");
    scanf("%f",&y);
    char op;
    printf("Enter the operator (+ / - / * / %% / / ): ");
    scanf("%s",&op);
    switch(op){
        case '+': printf("Addition: %.2f",x + y); break;
        case '-': printf("Subtraction: %.2f",x - y); break;
        case '/': printf("Division: %.2f",x / y); break;
        case '*': printf("Multiplication: %.2f",x * y); break;
        case '%': printf("Modulo: %d", (int)x % (int)y); break;
        default: printf("Invalid operation"); break;
    }
    return 0;
}
